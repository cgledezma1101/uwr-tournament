-#
  Renders navigation buttons on the page's navbar that are specific to the given tournament

  @param [Tournament] tournament Tournament that's being navigated
= content_for :module_navbar do
  - if can? :edit, tournament
    %li.dropdown
      = link_to '#', data: { toggle: 'dropdown' }, role: 'button' do
        = t('tournament.administrate')
        %span.caret
      %ul.dropdown-menu{ role: 'menu' }
        %li= link_to t('tournament.add_admin'), '#', class: 'js-show-app-modal', data: { formlink: "#{new_tournament_admin_path}?tournament_id=#{tournament.id}", formid: 'newTournamentAdmin' }
        %li= link_to t('tournament.invite_club'), '#', class: 'js-show-app-modal', data: { formlink: "#{new_tournament_invitation_path}?tournament_id=#{tournament.id}", formid: 'newTournamentInvitation' }
        / %li= link_to t('tournament.delete'), '#'
