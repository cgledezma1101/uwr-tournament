= form_for(resource, as: resource_name, url: user_password_path, html: { method: :put }) do |f|
	.form-horizontal
		= devise_error_messages!
		= f.hidden_field :reset_password_token
		.form-group
			%h2.col-sm-offset-2.col-sm-6.text-center
				= t('devise.password.change')
		.form-group.field
			= f.label :password, t('devise.password.new'), class: 'col-sm-2 control-label'
			.col-sm-6
				= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control'
		.form-group.field
			= f.label :password_confirmation, t('devise.password.confirm_new'), class: 'col-sm-2 control-label'
			.col-sm-6
				= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
		.form-group.actions
			.col-sm-offset-2.col-sm-10
				= f.submit t('devise.password.change'), class:'btn btn-primary'
		.form-group.field
			.col-sm-offset-2.col-sm-10
				= render "devise/shared/links"
