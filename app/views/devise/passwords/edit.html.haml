%h2= t('devise.password.change')

= form_for(resource, as: resource_name, url: user_password_path, html: { method: :put }) do |f|
	= devise_error_messages!
	= f.hidden_field :reset_password_token

	.field
		= f.label :password, t('devise.password.new')
		%br
		= f.password_field :password, autofocus: true, autocomplete: "off"

	.field
		= f.label :password_confirmation, t('devise.password.confirm_new')
		%br
		= f.password_field :password_confirmation, autocomplete: "off"

	.actions
		= f.submit t('devise.password.change')

= render "devise/shared/links"
